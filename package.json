    "@types/mocha": ">=9.1.0",
    "@types/node": ">=12.0.0",
    "bignumber.js": "^9.1.2",
    "chai": "^4.4.1",
    "dotenv": "^16.0.3",
    "hardhat": "^2.22.9",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "^0.11.42",
    "prettier": "2.8.3",
    "prettier-plugin-solidity": "1.3.1",
    "solhint": "3.3.7",
    "ts-node": ">=8.0.0",
    "typescript": ">=4.5.0"
